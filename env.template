# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
POSTGRES_USER=swen_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=swen_news
DATABASE_URL=postgresql+asyncpg://swen_user:your_secure_password_here@postgres:5432/swen_news

# Database Connection Details (for API service)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=swen_news
DB_USER=swen_user
DB_PASSWORD=your_secure_password_here

# API Configuration
ENVIRONMENT=development
USE_MOCK_AI=false
HOST=0.0.0.0
PORT=8000

# AI Service Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash

# Brave Search API Configuration
BRAVE_API_KEY=your_brave_api_key_here
BRAVE_IMAGE_SEARCH_URL=https://api.search.brave.com/res/v1/images/search
